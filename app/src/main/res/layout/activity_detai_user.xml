<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetaiUser">

    <ImageView
        android:contentDescription="@string/detail_user"
        android:id="@+id/img_gambar_user_detail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        tools:src="@tools:sample/avatars" />

    <TextView
        style="@style/TextContent.large"
        android:id="@+id/tv_nama_pengguna_detail"
        android:gravity="center"
        android:text="@string/nama_pengguna"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_gambar_user_detail" />

    <TextView
        style="@style/TextContent"
        android:id="@+id/tv_username_pengguna_detail"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/username_pengguna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_pengguna_detail" />

    <TextView
        style="@style/TextContent.medium"
        android:id="@+id/tv_company_detail"
        android:layout_marginTop="16dp"
        app:drawableStartCompat = "@drawable/ic_baseline_apartment_24"
        android:ellipsize="end"
        android:text="@string/perusahaan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_pengguna_detail" />

    <TextView
        android:id="@+id/tv_location_detail"
        style="@style/TextContent.medium"
        app:drawableStartCompat = "@drawable/ic_baseline_location_on_24"
        android:ellipsize="end"
        android:text="@string/location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_company_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_repository_detail"
        app:drawableStartCompat = "@drawable/ic_baseline_link_24"
        android:ellipsize="end"
        android:text="@string/repository"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_nilai_repository_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/repository"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/tv_repository_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_followers_detail"
        app:drawableStartCompat = "@drawable/ic_baseline_person_24"
        android:ellipsize="end"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repository_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_nilai_followers_detail"
        android:ellipsize="end"
        android:text="@string/followers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/tv_followers_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_repository_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_following_detail"
        android:ellipsize="end"
        android:text="@string/following"
        app:drawableStartCompat="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_followers_detail" />

    <TextView
        style="@style/TextContent.medium.wrap"
        android:id="@+id/tv_nilai_following_detail"
        android:ellipsize="end"
        android:text="@string/following"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/tv_following_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_followers_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>